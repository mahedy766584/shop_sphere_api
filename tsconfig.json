{
  "compilerOptions": {
    /* Language and Modules */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    /* Absolute Imports Setup */
    "baseUrl": "./src",
    "paths": {
      "@config/*": [
        "app/config/*"
      ],
      "@constants/*": [
        "app/constants/*"
      ],
      "@errors/*": [
        "app/errors/*"
      ],
      "@middlewares/*": [
        "app/middlewares/*"
      ],
      "@modules/*": [
        "app/modules/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@utils/*": [
        "app/utils/*"
      ],
      "@types/*": [
        "@types/*"
      ],
      "@interface/*":[
        "app/interface/*"
      ],
      "redlock": ["interface/redlock.d.ts"]
    },

     /* Interop & ES Module Support */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Interop & ES Module Support */
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "src/interface"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "eslint.config.mjs"
  ]
}